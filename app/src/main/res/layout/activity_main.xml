<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.myapplication"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity"
    tools:ignore="ResAuto">

    <!--自定义进度条-->
    <com.example.chenq.UI.MusicProgressBar
        android:id="@+id/mpb"
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="60dp">

            <Button
                android:id="@+id/btn_circle_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_default_btn_style"
                android:text="旋钮"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_lyric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_default_btn_style"
                android:text="歌词"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_broadcast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:background="@drawable/shape_default_btn_style"
                android:text="broadcast" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>